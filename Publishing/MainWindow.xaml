                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                HorizontalAlignment="Center" VerticalAlignment="Center" Click="VideoPlayer_Play_Button_Click">
                            <DynamicResource ResourceKey="Play"/>
                        </Button>
                        <!-- #6C6C6C -->
                        <Button x:Name="VideoPlayer_Forward_Button" Margin="5,0,0,0" Style="{StaticResource MaterialDesignRaisedButton}" 
                                BorderThickness="2" BorderBrush="White" Background="{x:Null}" Height="35" Width="60" 
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                HorizontalAlignment="Center" VerticalAlignment="Center" Click="VideoPlayer_Forward_Button_Click" >
                            <materialDesign:PackIcon  Kind="FastForward" Height="35" Width="35" Foreground="#FFEA002A" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>

                        <Button x:Name="VideoPlayerVolumeOffOnButton" Margin="10,0,0,0" Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Height="35" Width="38" BorderThickness="2" BorderBrush="White" Padding="0" Background="{x:Null}"
                                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Click="VideoPlayerVolumeOffOnButton_Click" >
                            <DynamicResource ResourceKey="PlayerVolumeOn"/>
                        </Button>

                        <StackPanel Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Label x:Name="VideoPlayer_Time_Label" Content="00:00 / 00:00" FontFamily="Stencil" FontSize="12" Foreground="#FFEA002A"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
            </Grid>
        </Grid>

        <!-- AddPublicationGrid -->
        <Grid x:Name="Grid_AddPublication" Grid.Row="0" Margin="42, 36, 0, 28" Background="#F5F5F5" Visibility="Collapsed">

            <Grid Margin="10,5,0,0" >
                <StackPanel Orientation="Vertical" Margin="0,0,10,0">

                    <!-- Publication information -->
                    <StackPanel Width="826" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Publication Information" Width="405" FontSize="28" Padding="1" HorizontalContentAlignment="Left" Foreground="Black" Style="{StaticResource InfoLabel}" />
                    </StackPanel>

                    <StackPanel  Orientation="Horizontal">
                        <StackPanel Width="405" HorizontalAlignment="Left">
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="Name" Style="{StaticResource InfoLabel}"/>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="ISSN" Style="{StaticResource InfoLabel}"/>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="Genre" Style="{StaticResource InfoLabel}"/>
                                <ComboBox Width="260" Margin="10,0,10,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                          FontSize="13" FontFamily="Stencil" Foreground="Black" 
                                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ItemsSource="{Binding GenreTypesCollection}" />
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="Format" Style="{StaticResource InfoLabel}"/>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="language" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="25,0" HorizontalAlignment="Right" Width="405">
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Number of" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="copies" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Number of" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="pages" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="date" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Download" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="link" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="Cover" Margin="0,10,0,0" Width="70" Style="{StaticResource InfoLabel}"/>
                                <Button x:Name="OpenCoverImageButton" Margin="17,10,0,0" Height="30" Width="30" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Click="OpenCoverImageButton_Click" >
                                    <materialDesign:PackIcon Kind="Download" Foreground="#6C6C6C" Height="30" Width="30" />
                                </Button>
                                <TextBox Width="260" Height="40" materialDesign:HintAssist.Hint="Insert cover name"  Margin="20,0,10,0" FontFamily="Stencil"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                        </StackPanel>
                        <!-- Image downloading when add new publication in DB -->
                        <StackPanel  Margin="15, -28" Width="244" Height="317" Background="#DB7093">
                            <Border Margin="2" Height="313" BorderThickness="1" BorderBrush="#6C6C6C">
                                <Image x:Name="NewPublication_OpenImage" Stretch="Fill"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- About publisher labels and textBoxes -->
                    <StackPanel Margin="0,0" Width="1084" Orientation="Horizontal" HorizontalAlignment="Left" Height="160">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="1084" Height="130" Margin="0,15,0,0">
                            <StackPanel Width="700" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Publisher Information"  Width="405" FontSize="28" Padding="1" HorizontalContentAlignment="Left" Foreground="Black" Style="{StaticResource InfoLabel}" />
                                <ComboBox x:Name="PublisherTypesComboBox" Width="250" Margin="25,0,10,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                          FontSize="12" FontFamily="Stencil" Foreground="Black" 
                                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ItemsSource="{Binding PublisherTypesCollection}" SelectionChanged="PublisherTypesComboBox_SelectionChanged" />
                            </StackPanel>
                            <StackPanel Margin="0,0" Width="1084" Orientation="Horizontal" HorizontalAlignment="Left">
                                <StackPanel Height="90" Orientation="Horizontal">
                                    <StackPanel VerticalAlignment="Center">
                                        <Label Content="Publisher" Style="{StaticResource InfoLabel}"/>
                                        <Label Content="name" Style="{StaticResource InfoLabel}"/>
                                    </StackPanel>
                                    <TextBox x:Name="Add_Publisher_Name_TextBox" Width="220" Height="70" Margin="0,0,0,0" FontFamily="Stencil" FontSize="13" TextWrapping="Wrap"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                                </StackPanel>
                                <StackPanel Margin="20,0" Height="90" Orientation="Horizontal">
                                    <Label Content="Address" Style="{StaticResource InfoLabel}" Margin="0,34" Width="100"/>
                                    <TextBox x:Name="Add_Publisher_Address_TextBox" Width="260" Height="70" Margin="5,0,0,0" FontFamily="Stencil" FontSize="13" TextWrapping="Wrap"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                                </StackPanel>
                                <StackPanel Margin="0,5" Height="90" Orientation="Horizontal">
                                    <Label Content="Email" Style="{StaticResource InfoLabel}" Margin="0,14" Width="70"/>
                                    <TextBox x:Name="Add_Publisher_Email_TextBox" Width="260" Height="70" Margin="5,0,10,0" FontFamily="Stencil" FontSize="13" TextWrapping="Wrap"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- DataGrid -->
                    <StackPanel Margin="-45,5,0,0" Height="130">
                        <DataGrid x:Name="Add_Page_DataGrid" Background="{x:Null}"  Style="{StaticResource MaterialDesignDataGrid}" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="True" CanUserReorderColumns="False">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="FontFamily" Value="Stencil"/>
                                    <Setter Property="BorderThickness" Value="1 1 0 1"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="Foreground" Value="#E4007C"/>
                                    <Setter Property="BorderBrush" Value="#6C6C6C"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <materialDesign:MaterialDataGridTextColumn Header="Name" Width="*"  />
                                <!--HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"-->
                                <materialDesign:MaterialDataGridTextColumn Header="ISSN" Width="*" />
                                <materialDesign:MaterialDataGridTextColumn Header="Publisher" Width="1.5*"/>
                                <materialDesign:MaterialDataGridTextColumn Header="Genre" Width="*"/>
                                <materialDesign:MaterialDataGridTextColumn Header="Format" Width="*"/>
                                <materialDesign:MaterialDataGridTextColumn Header="Language" Width="*"/>
                                <materialDesign:MaterialDataGridTextColumn Header="Copies" Width="*"/>
                                <materialDesign:MaterialDataGridTextColumn Header="Pages" Width="*"/>
                                <DataGridHyperlinkColumn Header="Download Link" Width="1.5*"/>
                                <materialDesign:MaterialDataGridTextColumn Header="Publ. Date" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!--   MaterialDesignRaisedButton, MaterialDesignRaisedLightButton, MaterialDesignRaisedDarkButton, 
                    MaterialDesignRaisedAccentButton, MaterialDesignFlatButton, MaterialDesignFlatAccentButton, MaterialDesignToolButton,
                    MaterialDesignToolForegroundButton, MaterialDesignFloatingActionMiniButton, MaterialDesignFloatingActionButton,
                    MaterialDesignFloatingActionMiniLightButton, MaterialDesignFloatingActionMiniDarkButton, MaterialDesignFloatingActionMiniAccentButton
                    MaterialDesignFloatingActionLightButton, MaterialDesignFloatingActionDarkButton, MaterialDesignFloatingActionAccentButton-->
                    <StackPanel Margin="0,5,0,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Save" Foreground="#E4007C" FontFamily="Stencil" BorderThickness="1" BorderBrush="#6C6C6C" 
                                Background="{x:Null}" Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>

                </StackPanel>
            </Grid>

        </Grid>

        <!-- DeletePublicationGrid -->
        <Grid x:Name="Grid_DeletePublication" Grid.Row="0" Margin="42, 36, 0, 28" Background="#1E90FF" Visibility="Collapsed">
            
        </Grid>
        
        <!-- SearchInDB --><!-- Dont work Hint underline! -->
        <Grid x:Name="Grid_SearchInDB" Grid.Row="0" Margin="42, 36, 0, 28" Background="#F5F5F5" Visibility="Collapsed">

            <!-- Search (with hint) -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Border Height="50" Width="400" BorderThickness="1" BorderBrush="#6C6C6C" Margin="100, 5, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Kind="SearchWeb" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="30" Margin="5"/>
                        <TextBox materialDesign:HintAssist.Hint="Search the files" 
                             Padding="5,0" Margin="0,5" Width="350"
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center"                         
                             BorderBrush="{DynamicResource MaterialDesignTextBoxBorder}"
                             HorizontalContentAlignment="Stretch"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Vertical" Margin="20, 0, 0, 0" Width="310">
                    <Label Content="Search in Data Base by" Width="300" FontSize="20" HorizontalContentAlignment="Center" Style="{StaticResource InfoLabel}"/>
                    <ComboBox Width="300" Margin="0,5,0,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                              FontSize="13" FontFamily="Stencil" Foreground="Black" 
                                              HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                                              ItemsSource="{Binding SearchTypesCollection}" />
                </StackPanel>
            </StackPanel>
            <!-- Advance search Grid-->
            <!--<Grid Margin="100, 100, 300, 100">
                <StackPanel Panel.ZIndex="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                        <materialDesign:PackIcon Kind="Menu" Height="30" Width="30" Foreground="#6C6C6C" />
                    </Button>
                    <TextBlock Margin="20,0" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center">                        
                        <Run Text="Last opened publications" FontFamily="Stencil" FontSize="19" Foreground="#E4007C"/>
                    </TextBlock>
                </StackPanel>
            </Grid>-->

            <StackPanel Margin="5,100,5,0" Height="130" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <DataGrid x:Name="SearchInDB_Page_DataGrid" Background="{x:Null}"  Style="{StaticResource MaterialDesignDataGrid}" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="True" CanUserReorderColumns="False">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="FontFamily" Value="Stencil"/>
                            <Setter Property="BorderThickness" Value="1 1 0 1"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="Foreground" Value="#E4007C"/>
                            <Setter Property="BorderBrush" Value="#6C6C6C"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <materialDesign:MaterialDataGridTextColumn Header="Name" Width="*"  />
                        <!--HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"-->
                        <materialDesign:MaterialDataGridTextColumn Header="ISSN" Width="*" />
                        <materialDesign:MaterialDataGridTextColumn Header="Publisher" Width="1.5*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Genre" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Format" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Language" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Copies" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Pages" Width="*"/>
                        <DataGridHyperlinkColumn Header="Download Link" Width="1.5*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Publ. Date" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

        </Grid>
        
        <!-- SettingsGrid -->
        <Grid x:Name="Grid_Settings" Grid.Row="0" Margin="42, 36, 0, 28" Background="#F5F5F5" Visibility="Collapsed">
            
        </Grid>

    </Grid>
</Window>