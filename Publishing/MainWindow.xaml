            <Grid Margin="725,10,5,395" >
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <Label Content="Publisher Information"  Width="405" FontSize="28" Padding="1" HorizontalContentAlignment="Center" Style="{StaticResource InfoLabel}" />
                    </StackPanel>
                    <StackPanel Margin="0,10" Height="50" Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <Label Content="Publisher" Style="{StaticResource InfoLabel}"/>
                            <Label Content="name" Style="{StaticResource InfoLabel}"/>
                        </StackPanel>
                        <TextBox Text="LTD Roga and kopita corporation" Style="{StaticResource AddTextBox}" Margin="5" Width="274"/>
                    </StackPanel>
                    <StackPanel Height="90" Orientation="Horizontal">
