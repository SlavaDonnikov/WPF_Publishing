                        <materialDesign:PackIcon Kind="Menu" Height="21" Width="21" />
                    </ToggleButton>
                    <Button x:Name="Delete_Publication_Cancel_Button" Content="Cancel" Margin="0,0,0,0" Width="65" Padding="0" Foreground="#E4007C" FontFamily="Stencil" BorderThickness="2" BorderBrush="#6C6C6C" 
                                Background="{x:Null}" Style="{StaticResource MaterialDesignRaisedButton}" Visibility="Collapsed" IsEnabled="False" Click="Delete_Publication_Cancel_Button_Click"  />
                    <Button x:Name="Delete_Publication_Modify_Button" Content="Modify" Margin="7,0,0,0" Width="65" Padding="0" Foreground="#E4007C" FontFamily="Stencil" BorderThickness="2" BorderBrush="#6C6C6C" 
                                Background="{x:Null}" Style="{StaticResource MaterialDesignRaisedButton}" Click="Delete_Publication_Modify_Button_Click" />
                    <Button x:Name="Delete_Publication_Delete_Button" Content="Delete" Margin="7,0,20,0" Width="65" Padding="0" Foreground="#E4007C" FontFamily="Stencil" BorderThickness="2" BorderBrush="#6C6C6C" 
                                Background="{x:Null}" Style="{StaticResource MaterialDesignRaisedButton}" Click="Delete_Publication_Delete_Button_Click" />
                </StackPanel>
            </StackPanel>

            <!-- Modify Grid-->
            <Grid x:Name="Grid_Modify_Publication" Background="#F5F5F5" Margin="0,0,0,38">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Bottom"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked,ElementName=TglBtnDel}" Value="True">
                                <Setter Property="Height" Value="598"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsChecked,ElementName=TglBtnDel}" Value="False">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <!-- Publication modifying fields -->
                <StackPanel  Orientation="Horizontal" Margin="0,0,0,0">

                    <!-- Fields -->
                    <StackPanel Margin="20,10,10,0" Width="405" HorizontalAlignment="Left">
                        <StackPanel Height="50" Orientation="Horizontal">
                            <Label Content="Name" Style="{StaticResource InfoLabel}"/>
                            <TextBox x:Name="Delete_Publication_Name_TextBox" Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                        </StackPanel>
                        <StackPanel Height="50" Orientation="Horizontal">
                            <Label Content="ISSN" Style="{StaticResource InfoLabel}"/>
                            <TextBox x:Name="Delete_Publication_ISSN_TextBox" Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C" PreviewTextInput="Add_Publication_ISSN_TextBox_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel Height="50" Orientation="Horizontal">
                            <Label Content="Genre" Style="{StaticResource InfoLabel}"/>
                            <ComboBox x:Name="Delete_Publication_Genre_ComboBox" Width="260" Margin="10,0,10,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                          FontSize="13" FontFamily="Stencil" Foreground="Black" 
                                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ItemsSource="{Binding GenreTypesCollection}" />
                        </StackPanel>
                        <StackPanel Height="50" Orientation="Horizontal">
                            <Label Content="Format" Style="{StaticResource InfoLabel}"/>
                            <TextBox x:Name="Delete_Publication_Format_TextBox" Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                        </StackPanel>
                        <StackPanel Height="50" Orientation="Horizontal">
                            <Label Content="Publisher" Margin="0,10,0,0"  Style="{StaticResource InfoLabel}"/>
                            <ComboBox x:Name="Delete_PublisherTypesComboBox" Width="260" Margin="10,0,10,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                          FontSize="12" FontFamily="Stencil" Foreground="Black" 
                                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ItemsSource="{Binding PublisherTypesCollection}" />
                        </StackPanel>
                        <StackPanel Margin="0,5" Height="50" Orientation="Horizontal">
                            <StackPanel VerticalAlignment="Center">
                                <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                                <Label Content="language" Style="{StaticResource InfoLabel}"/>
                            </StackPanel>
                            <ComboBox x:Name="Delete_Publication_Language_ComboBox" Width="260" Margin="10,0,10,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                          FontSize="13" FontFamily="Stencil" Foreground="Black" 
                                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ItemsSource="{Binding LanguageTypesCollection}" />
                        </StackPanel>
                        <StackPanel Margin="0,5" Height="50" Orientation="Horizontal">
                            <StackPanel VerticalAlignment="Center">
                                <Label Content="Number of" Style="{StaticResource InfoLabel}"/>
                                <Label Content="copies" Style="{StaticResource InfoLabel}"/>
                            </StackPanel>
                            <TextBox x:Name="Delete_Publication_NumberOfCopies_TextBox" Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C" PreviewTextInput="Add_Publication_NumberOfCopies_TextBox_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel Margin="0,5" Height="50" Orientation="Horizontal">
                            <StackPanel VerticalAlignment="Center">
                                <Label Content="Number of" Style="{StaticResource InfoLabel}"/>
                                <Label Content="pages" Style="{StaticResource InfoLabel}"/>
                            </StackPanel>
                            <TextBox x:Name="Delete_Publication_NumberOfPages_TextBox" Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C" PreviewTextInput="Add_Publication_NumberOfPages_TextBox_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel Margin="0,5" Height="50" Orientation="Horizontal">
                            <StackPanel VerticalAlignment="Center">
                                <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                                <Label Content="date" Style="{StaticResource InfoLabel}"/>
                            </StackPanel>
                            <TextBox x:Name="Delete_Publication_PublicationDate_TextBox" Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C" PreviewTextInput="Add_Publication_PublicationDate_TextBox_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel Margin="0,5" Height="50" Orientation="Horizontal">
                            <StackPanel VerticalAlignment="Center">
                                <Label Content="Download" Style="{StaticResource InfoLabel}"/>
                                <Label Content="link" Style="{StaticResource InfoLabel}"/>
                            </StackPanel>
                            <TextBox x:Name="Delete_Publication_DownloadLink_TextBox" Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                        </StackPanel>
                        <StackPanel Height="40" Margin="0,0" Orientation="Horizontal">
                            <Label Content="Cover" Margin="0,10,0,0" Width="70" Style="{StaticResource InfoLabel}"/>
                            <Button x:Name="Modify_OpenCoverImageButton" Margin="180,5,0,0" Height="30" Width="30"
                                    Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Click="OpenCoverImageButton_Click">
                                <materialDesign:PackIcon Kind="Download" Foreground="#6C6C6C" Height="30" Width="30" />
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Image -->
                    <StackPanel Margin="125,0,0,0" HorizontalAlignment="Right" Width="370" Height="515"  Background="#DB7093">
                        <Border Margin="2" Height="512" BorderThickness="1" BorderBrush="#6C6C6C">
                            <Image x:Name="DeletePublication_Image" Stretch="Fill" Margin="0" />
                        </Border>
                    </StackPanel>

                    <!-- Clear Fields when modifying record -->
                    <StackPanel Height="35" Width="35" Margin="-364, 558,0,0" >
                        <Button x:Name="Delete_Publication_Clear_Button" Height="35" Width="35" 
                                    Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    Style="{StaticResource MaterialDesignRaisedButton}" Padding="0" Click="Delete_Publication_Clear_Button_Click">
                            <materialDesign:PackIcon Kind="CloseOutline" Foreground="#6C6C6C" Height="30" Width="30" />
                            <Button.ToolTip>                                
                                <ToolTip Content="Clear fields." Placement="Relative" Background="{x:Null}"
                                 HasDropShadow="True" HorizontalOffset="40" VerticalOffset="3" Foreground="#6C6C6C"
                                 FontFamily="Stencil" FontSize="9"/>                               
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Grid>

        <!-- SearchInDB -->
        <!-- Dont work Hint underline! -->
        <Grid x:Name="Grid_SearchInDB" Grid.Row="0" Margin="42, 36, 0, 28" Background="#F5F5F5" Visibility="Collapsed">

            <!-- Search (with hint) -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Border Height="50" Width="400" BorderThickness="1" BorderBrush="#6C6C6C" Margin="100, 5, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Kind="SearchWeb" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="30" Margin="5"/>
                        <TextBox materialDesign:HintAssist.Hint="Search the files" 
                             Padding="5,0" Margin="0,5" Width="350"
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center" 
                             TextAlignment="Center"                         
                             BorderBrush="{DynamicResource MaterialDesignTextBoxBorder}"
                             HorizontalContentAlignment="Stretch"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Vertical" Margin="20, 0, 0, 0" Width="310">
                    <Label Content="Search in Data Base by" Width="300" FontSize="20" HorizontalContentAlignment="Center" Style="{StaticResource InfoLabel}"/>
                    <ComboBox Width="300" Margin="0,5,0,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                              FontSize="13" FontFamily="Stencil" Foreground="Black" 
                                              HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                                              ItemsSource="{Binding SearchTypesCollection}" />
                </StackPanel>
            </StackPanel>
            <!-- Advance search Grid-->
            <!--<Grid Margin="100, 100, 300, 100">
                <StackPanel Panel.ZIndex="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                        <materialDesign:PackIcon Kind="Menu" Height="30" Width="30" Foreground="#6C6C6C" />
                    </Button>
                    <TextBlock Margin="20,0" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center">                        
                        <Run Text="Last opened publications" FontFamily="Stencil" FontSize="19" Foreground="#E4007C"/>
                    </TextBlock>
                </StackPanel>
            </Grid>-->

            <StackPanel Margin="5,100,5,0" Height="130" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <DataGrid x:Name="SearchInDB_Page_DataGrid" Background="{x:Null}"  Style="{StaticResource MaterialDesignDataGrid}" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="True" CanUserReorderColumns="False">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="FontFamily" Value="Stencil"/>
                            <Setter Property="BorderThickness" Value="1 1 0 1"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="Foreground" Value="#E4007C"/>
                            <Setter Property="BorderBrush" Value="#6C6C6C"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <materialDesign:MaterialDataGridTextColumn Header="Name" Width="*"  />
                        <!--HeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"-->
                        <materialDesign:MaterialDataGridTextColumn Header="ISSN" Width="*" />
                        <materialDesign:MaterialDataGridTextColumn Header="Publisher" Width="1.5*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Genre" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Format" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Language" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Copies" Width="*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Pages" Width="*"/>
                        <DataGridHyperlinkColumn Header="Download Link" Width="1.5*"/>
                        <materialDesign:MaterialDataGridTextColumn Header="Publ. Date" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

        </Grid>

        <!-- SettingsGrid -->
        <Grid x:Name="Grid_Settings" Grid.Row="0" Margin="42, 36, 0, 28" Background="#F5F5F5" Visibility="Collapsed">

        </Grid>

    </Grid>
</Window>