<Window x:Class="Publishing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"       
        xmlns:local="clr-namespace:Publishing" 
        xmlns:WPFPdfViewer="clr-namespace:WPFPdfViewer;assembly=WPFPdfViewer"
        mc:Ignorable="d"          
        Title="Publishing Application" Height="700" Width="1200" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <Grid Background="#F5F5F5">
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>-->

        <!-- Swipping menu -->
        <Grid Panel.ZIndex="2" HorizontalAlignment="Left" Width="60">

            <Canvas Margin="0,0,0,0">

                <StackPanel x:Name="STP1" Style="{StaticResource spSlideLeft}" Background="#283038" Margin="-240,0,0,0" Width="300">


                    <DockPanel  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 0" Width="290" Height="100">
                        <Image DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 5, 30, 5" Source="Resources/pexels-photo-701026.jpeg" Stretch="Uniform" />
                        <materialDesign:PackIcon Kind="meteor"  Foreground="White" Width="50" Height="50" Margin="240,-70,0,0"/>
                    </DockPanel>

                    <!-- Stroke="#FF69B4" Height="2" Margin="5,0,65,10" StrokeThickness="5" X2="233" -->
                    <Line Style="{StaticResource changeLine}" />

                    <Border Style="{StaticResource borderEdge}" >
                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 10" Width="290">
                            <Label Style="{DynamicResource MenuLabel}" Content="Home page" VerticalAlignment="Center" Width="230" FontSize="22" MouseLeftButtonDown="Label_MouseLeftButtonDown"/>
                            <materialDesign:PackIcon Kind="HomeAssistant" Foreground="White" Width="50" Height="50" Margin="10, 0, 0, 0"/>
                        </DockPanel>
                    </Border>

                    <Border Style="{StaticResource borderEdge}" >
                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 10" Width="290">
                            <Label Style="{DynamicResource MenuLabel}" Content="View PDF file" VerticalAlignment="Center" Width="230" FontSize="22" MouseLeftButtonDown="Label_MouseLeftButtonDown_4"/>
                            <materialDesign:PackIcon Kind="FilePdfBox" Foreground="White" Width="50" Height="50" Margin="10, 0, 0, 0"/>
                        </DockPanel>
                    </Border>

                    <Border Style="{StaticResource borderEdge}">
                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 10" Width="290">
                            <Label Style="{DynamicResource MenuLabel}" Content="Add publication" VerticalAlignment="Center" Width="230" FontSize="22" MouseLeftButtonDown="Label_MouseLeftButtonDown_1"/>
                            <materialDesign:PackIcon Kind="DatabasePlus" Foreground="White" Width="50" Height="50" Margin="10, 0, 0, 0"/>
                        </DockPanel>
                    </Border>

                    <Border Style="{StaticResource borderEdge}">
                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 10" Width="290">
                            <Label Style="{DynamicResource MenuLabel}" Content="Delete publication" VerticalAlignment="Center" Width="230" FontSize="22" MouseLeftButtonDown="Label_MouseLeftButtonDown_2"/>
                            <materialDesign:PackIcon Kind="DatabaseMinus" Foreground="White" Width="50" Height="50" Margin="10, 0, 0, 0"/>
                        </DockPanel>
                    </Border>

                    <Border Style="{StaticResource borderEdge}">
                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 10" Width="290">
                            <Label Style="{DynamicResource MenuLabel}" Content="Search In DB" VerticalAlignment="Center" Width="230" FontSize="22" MouseLeftButtonDown="Label_MouseLeftButtonDown_3"/>
                            <materialDesign:PackIcon Kind="DatabaseSearch" Foreground="White" Width="50" Height="50" Margin="10, 0, 0, 0"/>
                        </DockPanel>
                    </Border>

                    <Border Style="{StaticResource borderEdge}">
                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10, 0, 10" Width="290">
                            <Label Style="{DynamicResource MenuLabel}" Content="Settings"  VerticalAlignment="Center" Width="230" FontSize="22"/>
                            <materialDesign:PackIcon Kind="Settings" Foreground="White" Width="50" Height="50" Margin="10, 0, 0, 0"/>
                        </DockPanel>
                    </Border>

                </StackPanel>
            </Canvas>
        </Grid>

        <!-- Upper panel -->
        <Grid Height="35" Margin="61,0,0,0" VerticalAlignment="Top" Background="#283038" Grid.ColumnSpan="2">
            <StackPanel Panel.ZIndex="2" Orientation="Horizontal" Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Width="62">
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                    <materialDesign:PackIcon Kind="CodeBrackets" Height="30" Width="30"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}" Click="ButtonClose_Click">
                    <materialDesign:PackIcon Kind="Power" Height="30" Width="30"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Status bar -->
        <Grid Height="27" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="#283038" Grid.ColumnSpan="2">
            <StackPanel Panel.ZIndex="2" Orientation="Horizontal" Height="27"  VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Label x:Name="ApplicationFullDate" Content="Saturday, March 31, 2018" Margin="0,0,10,0" FontFamily="Stencil" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="ApplicationRealTime" Content="00:00:00 AM" Margin="0,0,8,0" FontFamily="Stencil" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Height="27" Width="27" BorderBrush="{x:Null}" Background="{x:Null}">
                    <materialDesign:PackIcon Kind="Information" Height="27" Width="27" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

        <!-- HomePageGrid-->
        <Grid x:Name="Grid_HomePage" Margin="61, 36, 0, 28" Visibility="Visible" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="817*"/>
                <ColumnDefinition Width="322*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Panel.ZIndex="0" Background="#F5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Text Block -->
                <StackPanel Height="25" Margin="200,8,200,0" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="NoWrap" Height="25" >                        
                        <Run Text="Last opened publications" FontFamily="Stencil" FontSize="21" Foreground="#E4007C"/>
                    </TextBlock>
                </StackPanel>

                <!-- Central Pictures -->
                <Border>
                    <Grid Grid.Row="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.6*"/>
                            <RowDefinition Height="4.0*"/>
                            <RowDefinition Height="0.15*"/>
                            <RowDefinition Height="4.0*"/>
                            <RowDefinition Height="0.15*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="gr1" Margin="7" Grid.Column="1" Grid.Row="1" Style="{StaticResource V_Image}">
                            <!--MouseLeftButtonDown="Grid_MouseMouseLeftButtonDownDown"-->
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0.5" Color="#FF6E7A85"/>
                            </Grid.Effect>
                            <Image Source="Resources/ns1.jpg" Stretch="Fill"/>
                            <StackPanel Panel.ZIndex="2"   Background="#FF6E7A85" Style="{StaticResource Pic_Panel_Visibility}">
                                <StackPanel Orientation="Horizontal" Margin="0, 127, 0, 0" Height="30" VerticalAlignment="Center" >
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="47,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="CloudDownload" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="EyeOutline" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,0,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="Share" Height="30" Width="30"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="7" Grid.Column="3" Grid.Row="1" Style="{StaticResource V_Image}">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0.5" Color="#FF6E7A85"/>
                            </Grid.Effect>
                            <Image Source="Resources/ns2.jpg" Stretch="Fill"/>
                            <StackPanel Panel.ZIndex="2" Background="#FF6E7A85" Style="{StaticResource Pic_Panel_Visibility}">
                                <StackPanel Orientation="Horizontal" Margin="0, 127, 0, 0" Height="30" HorizontalAlignment="Stretch">
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="47,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="CloudDownload" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="EyeOutline" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,0,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="Share" Height="30" Width="30"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="7" Grid.Column="5" Grid.Row="1" Style="{StaticResource V_Image}">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0.5" Color="#FF6E7A85"/>
                            </Grid.Effect>
                            <Image Source="Resources/ns3.jpg" Stretch="Fill"/>
                            <StackPanel Panel.ZIndex="2" Background="#FF6E7A85" Style="{StaticResource Pic_Panel_Visibility}">
                                <StackPanel Orientation="Horizontal" Margin="0, 127, 0, 0" Height="30" HorizontalAlignment="Stretch">
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="47,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="CloudDownload" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="EyeOutline" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,0,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="Share" Height="30" Width="30"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="7" Grid.Column="5" Grid.Row="3" Style="{StaticResource V_Image}">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0.5" Color="#FF6E7A85"/>
                            </Grid.Effect>
                            <Image Source="Resources/ns4.jpg" Stretch="Fill"/>
                            <StackPanel Panel.ZIndex="2" Background="#FF6E7A85" Style="{StaticResource Pic_Panel_Visibility}">
                                <StackPanel Orientation="Horizontal" Margin="0, 127, 0, 0" Height="30" HorizontalAlignment="Stretch">
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="47,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="CloudDownload" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="EyeOutline" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,0,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="Share" Height="30" Width="30"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="7" Grid.Column="1" Grid.Row="3" Style="{StaticResource V_Image}">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0.5" Color="#FF6E7A85"/>
                            </Grid.Effect>
                            <Image Source="Resources/ns5.jpg" Stretch="Fill"/>
                            <StackPanel Panel.ZIndex="2" Background="#FF6E7A85" Style="{StaticResource Pic_Panel_Visibility}">
                                <StackPanel Orientation="Horizontal" Margin="0, 127, 0, 0" Height="30" HorizontalAlignment="Stretch">
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="47,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="CloudDownload" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="EyeOutline" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,0,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="Share" Height="30" Width="30"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="7" Grid.Column="3" Grid.Row="3" Style="{StaticResource V_Image}">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0.5" Color="#FF6E7A85"/>
                            </Grid.Effect>
                            <Image Source="Resources/ns6.jpg" Stretch="Fill"/>
                            <StackPanel Panel.ZIndex="2" Background="#FF6E7A85" Style="{StaticResource Pic_Panel_Visibility}">
                                <StackPanel Orientation="Horizontal" Margin="0, 127, 0, 0" Height="30" HorizontalAlignment="Stretch">
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="47,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="CloudDownload" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,7,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="EyeOutline" Height="30" Width="30"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="7,0,0,0" Height="30" Width="30" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <materialDesign:PackIcon Kind="Share" Height="30" Width="30"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                    </Grid>
                </Border>
            </Grid>

            <!-- Info about select Publication & Publisher-->
            <Grid Grid.Column="1">
                <StackPanel>
                    <StackPanel Margin="0,8" Height="23" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#E4007C">
                            <Run Text="Journal Information" FontFamily="Stencil" FontSize="21" />
                        </TextBlock>
                    </StackPanel>

                    <!-- Publication name -->
                    <StackPanel Height="50" Orientation="Horizontal">
                        <Label Content="Name" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="naked science"/></TextBlock>
                    </StackPanel>

                    <!-- Genre -->
                    <StackPanel Height="50" Orientation="Horizontal">
                        <Label Content="Genre" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="science"/></TextBlock>
                    </StackPanel>

                    <!-- Publisher -->
                    <StackPanel Height="50" Orientation="Horizontal">
                        <Label Content="Publisher" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="LTD Mirror"/></TextBlock>
                    </StackPanel>

                    <!-- Тираж Number of copies -->
                    <StackPanel Height="60" Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <Label  Content="Number of" Style="{StaticResource InfoLabel}"/>
                            <Label Content="copies" Style="{StaticResource InfoLabel}"/>
                        </StackPanel>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="4000"/></TextBlock>
                    </StackPanel>

                    <!-- Number of pages -->
                    <StackPanel Height="60" Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <Label Content="Number of" Style="{StaticResource InfoLabel}"/>
                            <Label Content="pages" Style="{StaticResource InfoLabel}"/>
                        </StackPanel>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="150"/></TextBlock>
                    </StackPanel>

                    <!-- Format -->
                    <StackPanel Height="50" Orientation="Horizontal">
                        <Label Content="Format" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="B5 150 x 40"/></TextBlock>
                    </StackPanel>

                    <!-- Publication language -->
                    <StackPanel Height="60" Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                            <Label Content="language" Style="{StaticResource InfoLabel}"/>
                        </StackPanel>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="Russian" /></TextBlock>
                    </StackPanel>

                    <!-- ISSN -->
                    <StackPanel Height="50" Orientation="Horizontal">
                        <Label Content="ISSN" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="0135--5417"/></TextBlock>
                    </StackPanel>

                    <!-- Publication date -->
                    <StackPanel Height="60" Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center">
                            <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                            <Label Content="date" Style="{StaticResource InfoLabel}"/>
                        </StackPanel>
                        <TextBlock Style="{StaticResource InfoTxtBlock_Font}"><Run Text="02.03.18"/></TextBlock>
                    </StackPanel>

                    <!-- Information about Publishing House -->
                    <StackPanel Margin="0,2" Orientation="Vertical" >
                        <Line Margin="0, 6" Stroke="Black" Height="1" StrokeThickness="3" X1="0" Y1="0" X2="320"/>
                        <Label Content="About publishing house" Margin="0" Padding="1" Width="270" FontSize="21" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Margin="0, 5, 0, 5" Width="300" Height="32" TextWrapping="Wrap" Style="{StaticResource InfoTxtBlock_Font}">
                            <Run Text="Unated States of America, DC Washington, 123 6th St.Melbourne, FL 32904" FontSize="13" />
                        </TextBlock>
                        <TextBlock Width="300" Style="{StaticResource InfoTxtBlock_Font}">
                            <Run Text="publishing@agalushkin.ru" FontSize="15" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>


        <!-- DeletePublicationGrid -->
        <Grid x:Name="Grid_DeletePublication"  Margin="61, 36, 0, 28" Background="#1E90FF" Visibility="Hidden"/>

        <!-- AddPublicationGrid -->
        <Grid x:Name="Grid_AddPublication"  Margin="61, 36, 0, 28" Background="#F5F5F5" Visibility="Hidden">
            <!-- Create new publication -->
            <!--<StackPanel Margin="0,1,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="60" Width="640">
                <Label Content="Create new publication" Width="645" FontSize="50" HorizontalContentAlignment="Center" 
                       VerticalContentAlignment="Center" Style="{StaticResource InfoLabel}"/>
                <Line  X2="640" Stroke="Black" StrokeThickness="2" />
            </StackPanel>-->

            <Grid Margin="25,10,0,0" >
                <!-- All labels and textBoxes -->
                <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                    <!-- Publication information -->
                    <StackPanel Width="826" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Publication Information" Width="405" FontSize="28" Padding="1" HorizontalContentAlignment="Left" Foreground="Black" Style="{StaticResource InfoLabel}" />
                    </StackPanel>

                    <!-- About publication labels and textBoxes -->
                    <StackPanel  Orientation="Horizontal">
                        <StackPanel Width="405" HorizontalAlignment="Left">
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="Name" Style="{StaticResource InfoLabel}"/>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="ISSN" Style="{StaticResource InfoLabel}"/>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="Genre" Style="{StaticResource InfoLabel}"/>
                                <ComboBox Width="260" Margin="10,0,10,0" BorderThickness="0 0 0 1" BorderBrush="#6C6C6C"
                                          FontSize="13" FontFamily="Stencil" Foreground="Black" 
                                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ItemsSource="{Binding GenreTypesCollection}" />
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <Label Content="Format" Style="{StaticResource InfoLabel}"/>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="language" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="20,0" HorizontalAlignment="Right" Width="405">
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Number of" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="copies" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Number of" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="pages" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Publication" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="date" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
                            </StackPanel>
                            <StackPanel Height="50" Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Download" Style="{StaticResource InfoLabel}"/>
                                    <Label Content="link" Style="{StaticResource InfoLabel}"/>
                                </StackPanel>
                                <TextBox Width="260" Height="40" Margin="10,0,10,0" FontFamily="Stencil" FontSize="13"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"  
                                         Style="{StaticResource MaterialDesignTextBox}" BorderBrush="#6C6C6C"/>
