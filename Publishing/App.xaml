        <!-- Для выезжания и заезжания меню при наведении мышки -->
        <Style x:Key="spSlideLeft" TargetType="StackPanel">
            
            <Style.Triggers>
                
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-240,0,0,0" To="0, 0, 0, 0" DecelerationRatio=".9" Duration="0:0:0.8"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-240, 0, 0, 0" DecelerationRatio=".9" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                
            </Style.Triggers>         
            
        </Style>

        <!-- Для подсвечивания надписей меню при наведении курсора -->
        <Style x:Key="MenuLabel" TargetType="Label">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Foreground" Value="#FF69B4"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF1493"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="FontWeight" Value="Bold"/>

                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Foreground" Value="#FF69B4"/>                    
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Рамка вокруг элементов меню при наведении курсора -->
        <Style x:Key="borderEdge" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="3.5"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>

            <Style.Triggers>
                
                <Trigger Property="IsMouseOver" Value="true">                   
                    <Setter Property="BorderBrush" Value="#FF1493"/>                    
                </Trigger>
                
                <Trigger Property="IsMouseOver" Value="false">                    
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                </Trigger>
                
            </Style.Triggers>            
        </Style>
      
        <!-- Stile for Line --> <!-- All Work!!! -->
        <Style x:Key="changeLine" TargetType="{x:Type Line}">
            <Setter Property="Margin" Value="5,0,65,10"/>
            <Setter Property="StrokeThickness" Value="5"/>
            <Setter Property="X2" Value="233"/>
            <Setter Property="Height" Value="2"/>
            <Setter Property="Stroke" Value="#FF69B4"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMouseOver, ElementName=STP1}" Value="True">
                    <Setter Property="Stroke" Value="#FF1493"/>
                    <Setter Property="StrokeThickness" Value="7"/>
                    <Setter Property="Height" Value="4"/>
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>                           
                            <Storyboard Storyboard.TargetProperty="X2">
                                <DoubleAnimation To="293" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetProperty="Margin">
                                <ThicknessAnimation To="5,0,5,10" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>

                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetProperty="X2">
                                <DoubleAnimation To="233" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetProperty="Margin">
                                <ThicknessAnimation To="5,0,65,10" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>                    
                    
                </DataTrigger> 
            </Style.Triggers>
        </Style>


    </Application.Resources>
</Application>
